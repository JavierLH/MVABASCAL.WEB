<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ABASCAL</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Inicio
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <div class="nav-link d-flex justify-content-between align-items-center"
                         @onclick="ToggleManifestaciones"
                         style="cursor: pointer;">

                        <span>
                            <span class="bi bi-folder2-open-nav-menu" aria-hidden="true"></span> Manifestaciones
                        </span>

                        <span class="bi @(expandManifestaciones ? "bi-chevron-down" : "bi-chevron-right") small"></span>
                    </div>
                </div>

                @if (expandManifestaciones)
                {
                    <div class="nav-item px-3 ps-5 animate__animated animate__fadeIn">
                        <NavLink class="nav-link" href="manifestaciones">
                            <span class="bi bi-list-ul-nav-menu" aria-hidden="true"></span> Ver Listado
                        </NavLink>
                    </div>

                    <div class="nav-item px-3 ps-5 animate__animated animate__fadeIn">
                        <NavLink class="nav-link" href="manifestaciones/nueva">
                            <span class="bi bi-plus-square-nav-menu" aria-hidden="true"></span> Crear Nueva
                        </NavLink>
                    </div>
                }

            </Authorized>

            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Iniciar Sesión
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>

    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    // --- NUEVA VARIABLE PARA CONTROLAR EL SUBMENÚ ---
    private bool expandManifestaciones = false;

    private void ToggleNavMenu()
    {
        // Solo colapsamos el menú principal en móviles, no afectamos el submenú
        collapseNavMenu = !collapseNavMenu;
    }

    // --- NUEVO MÉTODO PARA ABRIR/CERRAR LA CARPETA ---
    private void ToggleManifestaciones()
    {
        expandManifestaciones = !expandManifestaciones;

        // Evitamos que al dar clic en la carpeta se cierre el menú lateral completo (en móviles)
        // Si quisieras que el menú se cierre al seleccionar una opción, se maneja diferente.
    }
}